<form id="star-rating-{{id}}">
  <fieldset class="rating" form="star-rating-{{id}}" id="{{id}}" data-rank="{{rank}}">
    <input type="radio" id="{{id}}-star10" name="rating" value="10">
    <label class="full" for="{{id}}-star10" title="Awesome - 5 stars"></label>
    <input type="radio" id="{{id}}-star9" name="rating" value="9">
    <label class="half" for="{{id}}-star9" title="Great - 4.5 stars"></label>
    <input type="radio" id="{{id}}-star8" name="rating" value="8">
    <label class="full" for="{{id}}-star8" title="Good - 4 stars"></label>
    <input type="radio" id="{{id}}-star7" name="rating" value="7">
    <label class="half" for="{{id}}-star7" title="OK - 3.5 stars"></label>
    <input type="radio" id="{{id}}-star6" name="rating" value="6">
    <label class="full" for="{{id}}-star6" title="OK - 3 stars"></label>
    <input type="radio" id="{{id}}-star5" name="rating" value="5">
    <label class="half" for="{{id}}-star5" title="Not so good - 2.5 stars"></label>
    <input type="radio" id="{{id}}-star4" name="rating" value="4">
    <label class="full" for="{{id}}-star4" title="Kinda bad - 2 stars"></label>
    <input type="radio" id="{{id}}-star3" name="rating" value="3">
    <label class="half" for="{{id}}-star3" title="Bad - 1.5 stars"></label>
    <input type="radio" id="{{id}}-star2" name="rating" value="2">
    <label class="full" for="{{id}}-star2" title="Really bad - 1 star"></label>
    <input type="radio" id="{{id}}-star1" name="rating" value="1">
    <label class="half" for="{{id}}-star1" title="Terrible - 0.5 stars"></label>
  </fieldset>
</form>