<div>
  <section>
    {{#if (has_name this)}}
    <h2> {{full_name this}} ({{username}})</h2>
    {{else}}
    <h2>{{username}}</h2>
    {{/if}}
    Member for {{relative_time createdAt}}
    {{#if profilePicture}}
    <img src="{{profilePicture}}" alt="{{username}}'s profile picture">
    {{/if}}
  </section>
</div>